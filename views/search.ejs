<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/search.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
</head>
<body>
  <header class="header">
    <div class="logo">ByteCard</div>
    <nav class="nav">
      <a href="/" class="nav-link">Home</a>
      <a href="/login" class="nav-link">Login</a>
    </nav>
  </header>

  <div class="container">
    <div class="search_text">Search for ByteCards</div>
    <form action="/search" method="GET">
        <input 
            type="text" 
            class="search-input" 
            name="query" 
            placeholder="Enter search query..." 
            required 
        />
        <button type="submit" class="btn">Search</button>
    </form>
    <div class="results-container">
      <ul class="search-results">
        <% if (cards && cards.length > 0) { %>
          <% cards.forEach(function(card) { %>
            <li class="card">
              <div class="card-header">
                <span class="card-name"><%= card.card_name %></span>
                <span class="card-brand">ByteCard</span>
              </div>
              <div class="card-body">
                <div class="card-position"><%= card.card_position %></div>
              </div>
              <div class="card-footer">
                <span class="company-name"><%= card.card_company %></span>
                <span class="card-industry"><%= card.tagname %></span>
              </div>
            </li>
          <% }); %>
        <% } else { %>
          <li>No results found.</li>
        <% } %>
      </ul>
    </div>
  </div>
</body>
</html>
