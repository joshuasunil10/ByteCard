<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/search.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
</head>
<body>
  <header class="header">
    <div class="logo">ByteCard</div>
    <nav class="nav">
        <a href="/home" class="nav-link">Home</a>
        <a href="/login" class="nav-link">Login</a>
    </nav>
  </header>
  
  <div class="container">
      <div class="search_text">Search for ByteCards</div>
      <form action="/search" method="GET">
          <input 
              type="text" 
              class="search-input" 
              name="query" 
              placeholder="Enter search query..." 
              required 
          />
          <button type="submit" class="btn">Search</button>
      </form>

      <!-- Results Container -->
      <div class="results-container">
        <ul class="search-results">
            <% if (results && results.length > 0) { %>
                <% results.forEach(result => { %>
                    <li>
                        <div class="card">
                            <div class="card-header">
                                <span class="card-name"><%= result.name %></span>
                                <span class="card-brand">ByteCard</span>
                            </div>
                            <div class="card-body">
                                <div class="card-position"><%= result.position %></div>
                            </div>
                            <div class="card-footer">
                                <span class="company-name"><%= result.company %></span>
                                <span class="card-industry">Industry</span>
                            </div>
                        </div>
                    </li>
                <% }); %>
            <% } else { %>
                <li>No results found.</li>
            <% } %>
        </ul>
        
      </div>
  </div>
  
  <footer class="footer">
      ByteCard - 2024
  </footer>
</body>
</html>
